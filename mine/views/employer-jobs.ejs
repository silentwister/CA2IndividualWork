
<!DOCTYPE html>
<html>
<head>
    <title>My Posted Jobs</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
</head>
<body class="container mt-5">
    <h2 class="mb-4">My Posted Jobs</h2>

    <% if (jobs.length === 0) { %>
        <p>You have not posted any jobs yet.</p>
    <% } else { %>
        <table class="table table-bordered">
            <thead class="table-light">
                <tr>
                    <th>Position</th>
                    <th>Location</th>
                    <th>Pay</th>
                    <th>Job Nature</th>
                    <th>Description</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% jobs.forEach(job => { %>
                    <tr>
                        <td><%= job.position %></td>
                        <td><%= job.location %></td>
                        <td>$<%= job.pay_per_hour %>/hr</td>
                        <td><%= job.jobNature %></td>
                        <td><%= job.description %></td>
                        <td>
                            <a href="/editJob/<%= job.job_id %>" class="btn btn-warning btn-sm">Edit</a>
                            <a href="/deleteJobs/<%= job.job_id %>" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this job?')">Delete</a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    <% } %>
</body>
</html>